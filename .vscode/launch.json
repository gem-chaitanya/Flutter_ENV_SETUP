    "version": "0.2.0",
    "configurations": [

        {
            "name": "Development",
            "request": "launch",
            "type": "dart",
            "program": "lib/ENV/main_dev.dart",
            "args": [
                "-t",
                "lib/ENV/main_dev.dart",
                "--flavor",
                "dev"
            ]
        },
        {
            "name": "Production",
            "request": "launch",
            "type": "dart",
            "program": "lib/ENV/main_prod.dart",
            "args": [
                "-t",
                "lib/ENV/main_prod.dart",
                "--flavor",
                "prod",
            ]
        },
        {
            "name": "Run all Tests",
            "request": "launch",
            "type": "dart",
            "program": "test/",
            "args": ["--coverage"]
        }
    ]
}